<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => "#{@user_id}" } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
