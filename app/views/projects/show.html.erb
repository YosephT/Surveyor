<div class = "list-view">

  <p id="notice"><%= notice %></p>

  <p><h2><%= @current_project.title %></h2></p>
  <p><h4><%= @current_project.description %></h4></p>
  <button><%= link_to 'New Survey', "#{@current_project.id}/survey/new"%></button>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @current_surveys.each do |survey| %>
        <tr>
          <td><%= link_to "#{survey.name}" , survey %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <hr>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %> |
  <%= link_to('Logout', destroy_researcher_session_path, :method => :delete) %>
  <%# link_to 'New', new_survey_path %>

</div>
