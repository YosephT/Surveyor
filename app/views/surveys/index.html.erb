<section class = "list-view">
  <p id="notice"><%= notice %></p>

  <h1>All Surveys</h1>

  <% if researcher_signed_in?  %>
    <button><%= link_to 'New Survey', new_survey_path %></button>
  <%end%>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Question</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <td><%= survey.name %></td>

          <td><%= link_to 'Show', survey %></td>
          <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
          <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if subject_signed_in? %>
  <% end %>
</section>
