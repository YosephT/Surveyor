<div class = "list-view">
  <p id="notice"><%= notice %></p>

  <h1>Hello <%=current_subject.email%></h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @surveys.each do |survey| %>
        <tr>
          <td><%= link_to "Survey: #{survey.name}", survey %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <br>
  <%= link_to('Logout', destroy_subject_session_path, :method => :delete) %>
</div>
